<!DOCTYPE html>
<html>
<head>
  <title>hithr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
</head>


<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
	<div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "hithr", root_path, :class => "brand" %>
      <div class="nav-collapse">
        <ul class="nav">
          <li class="divider-vertical"></li>
          <li><%= link_to "rides", rides_path %>
	      <% if current_user %><li><%= link_to "post", new_ride_path %></li><% end %>
          <li><%= link_to "about", about_path %></li> 
          <li><%= link_to "contact", contact_path %></li>
          <li><%= link_to "help", help_path %></li>
        </ul>
      </div>
      <div class="nav pull-right">
        <ul class="nav">  
	      <% if user_signed_in? %>
			<% if current_user.profile.avatar_file_name.present? %>
		      <li class="no-padding"><%= link_to image_tag(current_user.profile.avatar.url(:thumb)), current_user %></li>
			<% end %>
		    <li><%= link_to current_user.username, current_user %></li>	
	        <li><%= link_to "#{pluralize(current_user.messages.unread.count, 'unread message')}", 
					user_messages_path(current_user) if current_user.messages.present? %></li>
			<li><%= link_to "sign out", sign_out_path, :method => :delete %></li>
	      <% else %>
            <li><%= link_to "sign in", new_user_session_path %></li>
	        <li><%= link_to "sign up", sign_up_path %></li> 
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>


	
<div class="container">
  <% if notice.present? %>
    <p class="round notice"><%= notice.downcase %></p>
  <% end %>
  <% if alert.present? %>
    <p class="round notice alert"><%= alert.downcase %></p>
  <% end %>	
	
<%= yield %>
</div>
</body>
</html>
