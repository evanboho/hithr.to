<strong>
	<%= f.label :birthday, "birthday:" %><br>
	<%= f.date_select(:birthday, :order => [:month, :day, :year], :start_year => 1940, :end_year => 1994) %><br>
	
	<%= f.label :gender, "gender:" %><br>
	<%= f.select(:gender, options_for_select(['woman', 'man', 'human', 'traveller'])) %><br>
	
	<%= f.label :hometown, "current city:" %><br>
	<%= f.text_field :hometown %><br>

	<%= f.label :about, "bio:" %><br>
	<%= f.text_area :about, :class => "text_area" %><br><br>

	<%= f.label :avatar, "upload new photo:" if @profile.avatar_file_name.present? %><br>
	<%= f.file_field :avatar %><br><br>

	<%= f.submit %>
</strong>