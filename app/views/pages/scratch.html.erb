<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name, :class => "form-inline" )) do |f| %>
<fieldset>
<%= devise_error_messages! %>
 
  <div class="control-group"><label class="control-label"<%= f.label :firstname, "name:" %></label>
  <div class="controls"><%= f.text_field :firstname, :placeholder => "first" %>
  <%= f.text_field :lastname, :placeholder => "last" %><span class="help-inline">help</span></div></div>
  
  <div><%= f.label :email, "email:" %>
  <%= f.email_field :email %></div>

  <div><%= f.label :password, "password:" %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "confirm password:" %>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "sign up", :class => "btn btn-primary" %></div>
</fieldset>
<% end %>

<%= render "shared/links" %>