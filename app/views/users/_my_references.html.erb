<div class="heading top">
<h3 class="">references (<%= @user.references.count %>)</h3>
<p>	Positive (<%= @user.references.positive_refs.count %>) | 
	Neutral (<%= @user.references.neutral_refs.count %>) |
	Negative (<%= @user.references.negative_refs.count %>)
	
</div>
<div class="well bottom">
<% if @user != current_user %>
<div class="center">
<%= link_to "leave a reference", new_user_reference_path(@user), :class => "btn btn-primary	" %>
</div><br>
<% end %>
<% if @user.references.present? %>
  <%= render 'references/reference' %>
<% else %>
<h4 class="center"><i>no references<i></h4>
<% end %>
</div>