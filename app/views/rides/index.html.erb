<% provide :title, "rides" %>
<div class="small-container">
<div class="hero-unit">
<h1>find a ride</h1></div>

</div>
<% unless @rides.blank? %>

<div class="small-container">
<table class="table table-striped round shadow-down">
	<thead>
	<tr class="round"><th colspan="1">
		On:
		</th><th colspan="2">
		Driver:
		</th><th colspan="2">
		From:
    	</th><th>
	    To:
 		</th><th>
	    Posted:
	</tr>
	</thead>
	<tr><%= render 'shared/ride_search' %>
	</tr>
    <%= render @rides %>
</table>
</div>
<%= will_paginate %>
<% else %>
<br/>
<h3 align="center"><%= link_to "See all rides", rides_path %></h3>	
<% end %>