<% provide :title, "rides" %>
  <div class="hero-unit">

    <h1 style="font-size: 3em;">
	rides </h1>
	<h2>
	<% unless params[:action] == "user_rides" %>
	  <%= params[:action] %>
	<% else %>
	  posted by <%= @user.username %>
	<% end %>
	<br>
	</h3>
	<div class="woohoo round">
	woohoo! we found 
	</span><span class="ride_count"> </span> rides
	</div>
  </div>

  <div class="shade round ride_container">
	<%= render 'shared/ride_search' %>

  <div id="rides_table">
	  	
    <%= render 'rides_table' %>
  </div>
</div>