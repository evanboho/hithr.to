<div class="small-container">

<div class="new_ride">
<div class="well shadow round">
<br>
<%= simple_form_for @ride, :class=> "form-inline" do |f| %>
    <%= f.input :offered, :label => "ride:", :as => :select, :collection => [['offered', true], ['wanted', false]], :default => true %>
	<label>from: </label><%= f.text_field :start_city, :placeholder => "(city)" %>
	<% f.input :start_city, :label => "from: ", :placeholder => "(city)", :required => false %>
    <%= state_select(f, :start_state) %><br>
    
    <label>to: </label><%= f.text_field :end_city, :placeholder => "(city)" %>
	<%= state_select(f, :end_state) %>


<br style="clear:both;"><br>


	<label>on: </label><%= f.date_select :go_time,{ 
        					:order => [:month, :day], 
      				    	:style => "width:60px", :default => Date.today } %> <br>
    <% hour = @ride.go_time.hour ||= 9 %><% min = @ride.go_time.min ||= 0 %>
    <label> at: </label>
    <%= go_time_select(f, :go_time_hour, hour) %>
    <%= go_time_min_select(f, :go_time_min, min) %>
    <br style="clear:both;">  <br>  
    <label> </label><%= f.submit "continue", :class => "btn btn-warning" %>

<% end %>

</div>
</div>
</div>