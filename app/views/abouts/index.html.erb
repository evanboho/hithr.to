<div class="hero-unit">
	<h1>about - wiki</h1>
	<p><% if !current_user %>log in to <% end %>click on any of the sections to make an edit.</p>
</div>
<h3 class="heading">basics</h3><br>

<div class="row">
	<div style="border: 1px solid #ccc;" class="span12 round">
	
	<% @about_graphs.each do |about| %>
	  <div class="span4">
	  <h3><%= best_in_place_if current_user, about, :title %></h3>
	  <p><%= best_in_place_if current_user, about, :content, type: :textarea %></p>
	  </div>
	<% end %>
</div>
</div>
<br>
<h3 class="heading">FAQ</h3><br>

<div class="row">
	<div style="border: 1px solid #ccc;" class="span12 round">
<% @about_faqs.each do |about| %>
  <div class="span6">
  <h3><%= best_in_place_if current_user, about, :title %></h3>
  <p><%= best_in_place_if current_user, about, :content, type: :textarea %></p>
  </div>
<% end %>
</div>
</div>
<br>
<h3 class="heading">create new section</h3>
<div class="well">
  <br>
  <%= simple_form_for @about do |f| %>
    <%= f.input :title %>
    <%= f.input :genre, :collection => ["paragraph", "FAQ"]%>
    <%= f.input :content %>
    <%= f.submit :style => "margin-left: 170px;", :class => "btn btn-primary" %>
  <% end %>