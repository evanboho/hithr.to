<div class="hero-unit shadow-down">
  <h1>inbox</h1>
</div>

<div class="row"> 
  <div class="span8">
	<% if @message.sender == current_user %>
	  <h3 class="heading">sent message</h3>
	<% else %>
	  <h3 class="heading">message</h3>
	<% end %>
    <%= render 'show_message', :msg => @message %>
	
	<% if @mutual_messages.count > 0 %>
    <br><br>	
    <h3 class="heading">conversation</h3> 
	<% @mutual_messages.each do |msg| %>
	  <%= render 'show_message', :msg => msg %>
	<% end %>
	<% end %>
  </div>

  <div class="span4">
    <%= render 'inbox' %>	
  </div>
</div>