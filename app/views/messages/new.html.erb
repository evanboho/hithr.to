<div class="hero-unit shadow-down"><h1>write a message</h1>
</div>


<div class="row">
  <div class="span8">
    <table class="tble msg"><tr><td>
	    <h4>
		  <span style="margin-left: 138px; margin-right: 8px;">to: </span>
		  <%= gravatar_for @user, :thumb, :size => 30 %> 
	      <%= link_to @user.username, @user %>
	    </h4><br>
    
	    <%= simple_form_for [@user, @message] do |f| %>
	      <%= f.input :sujet, :label => "subject:", :required => false %>
	      <%= f.input :sender_email, :label => "from:", :placeholder => "(email)" if !current_user %>
	      <%= f.input :content, :as => :text, :label => "message:" , :class => "text_area", :required => false %>
	      <%= f.submit "send", :class => "btn btn-primary", :style => "margin-left: 170px;" %>
	    <% end %>
    </table>
    <% if @reply_from.present? %>
	  <%= render 'show_message', :msg => @reply_from %>
	<% end %>
  </div>
  <div class="span4">
    <%= render 'inbox' if current_user %>	
  </div>
</div>