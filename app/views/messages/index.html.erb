<div class="hero-unit shadow-down">
  <h1>inbox</h1>
</div

<div class="row">
	
  <div class="span4">
    <%= render 'inbox' %>	
  </div>
  
  <div class="span4">

  </div>
  

</div>



<div class="row">
	<div class="span4">
	<div class="well">
	  <h4>unread messages:</h4><br>

	<% unless @messages.unread.limit(5).empty? %>
	  <% @messages.unread.limit(5).each do |msg| %>

	    <%= render 'messages/message_stubs', :user => msg.sender, :msg => msg %>

	  <% end %>
	<% else %>
	  <i>no unread messages</i>
	<% end %>

	</div>
	<div class="well">

	<h4>recent sent messages:</h4><br>

	<% unless @messages_sent.empty? %>
	  <% @messages_sent.each do |msg| %>

	    <%= render 'messages/message_stubs', :user => msg.user, :msg => msg %>

	  <% end %>
	<% else %>
	  <i>no sent messages</i>
	<% end %>

	</div>
	<div class="well">
	 <h4>read messages:</h4><br>

	<% unless @messages.archived.limit(5).empty? %>
	  <% @messages.archived.limit(5).each do |msg| %>

	    <%= render 'messages/message_stubs', :user => msg.sender, :msg => msg %>

	  <% end %>
	<% else %>
	  <i>no archived messages</i>
	<% end %>
	</div>
  </div>

  <div class="span4">
  
  </div>
</div>