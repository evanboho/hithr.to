<% @user.references.order('created_at DESC').each do |msg| %>
	
<div class="well"  style="border: 1px solid #bbb;">

    <p>
    <span style="float:left; text-align:left;">
	<%= gravatar_for(msg.sender, :thumb, :size => 30) %> <u><%= link_to msg.sender.username, msg.sender %></u>
	</span>
	<div style="float:right;">
	<% if msg.positive > 0 %>
	  <div class="ref round pos">
	<% elsif msg.positive == 0 %>
	  <div class="ref round neut">
	<% else %>
	  <div class="ref round neg">
	<% end %>	
    <h4><%= msg.positive_exp? %></h4>
	</div>
    		
	</div>
  </p>
<br>
  <div class="content round" style="margin: 10px -5px; padding: 10px; font-size:110%;">
    <%= msg.content %>
    
	</div>
	<% if msg.sender == current_user %>
	<br><%= link_to "rescind", reference_path(msg), :method => :delete, :class => "btn btn-warning", :style => "float:right;" %>
	<% end %>
<div class="alt"><%= msg.msg_time %>
</div>
<br>
</div>
<% end %>
