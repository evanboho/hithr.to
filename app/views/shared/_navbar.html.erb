<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
	<div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "hithr", root_path, :class => "brand", :style => "text-decoration: none;" %>
      <div class="nav-collapse">
        <ul class="nav nav-pills">
          <li class="divider-vertical"></li>
          <li><%= link_to "rides", rides_path %>
          <li><%= link_to "about", abouts_path %></li> 
          <li><%= link_to "contact", contact_path %></li>
          <li><%= link_to "help", help_path %></li>
        </ul>
      </div>
	  <div class="nav-collapse pull-right">
	    <ul class="nav nav-pills">
	      <% if signed_in? %>
		    <% if current_user.messages.unread.count > 0 %>
		      <li><%= link_to "#{pluralize(current_user.messages.unread.count, 'unread message')}", message_path(current_user.messages.unread.first) %>
			  </li>
			<% end %>
	      <li class="dropdown">
	        <a class="dropdown-toggle" data-toggle="dropdown">
	          <%= current_user.username %>
	          <b class="caret"></b>
	         <ul class="dropdown-menu">
		      <li><%= link_to "messages", user_messages_path(current_user) %></li> 
		      <li><%= link_to "post ride", new_ride_path %></li>
		      <li><%= link_to "see profile", current_user %></li>
		      <li><%= link_to "sign out", sign_out_path %></li>
		       
		       <li class="divider"></li>
		    </ul>
	        </a>
	      <% else %>
	      <li><%= link_to "sign up", sign_up_path %></li>
	      <li><%= link_to "sign in", sign_in_path %></li> 
	      <% end %>
	        
	      </li>
	    </ul>
	  </div>
      </div>
    </div>
  </div>
</div>
