<%- if devise_mapping.registerable? && controller_name != 'registrations' %>or<br>
  <%= link_to "sign up", new_registration_path(resource_name), :class => "btn" %>
<% end -%>

<%- if controller_name != 'sessions' %><br>or <br>
  <%= link_to "sign in", new_session_path(resource_name), :class => "btn" %>
<% end -%><br /><br>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "forgotten password?", new_password_path(resource_name), :style => "font-size: .8em;" %><br /><br>
<% end -%>

<%- if devise_mapping.omniauthable? %>
   <h3>or connect with:</h3>
  <%- resource_class.omniauth_providers.each do |provider| %>
   
    <%= link_to (image_tag "#{provider}_64.png"), omniauth_authorize_path(resource_name, provider), :class => "auth_provider" %>
    <% link_to "#{provider.to_s.split('_').first}", omniauth_authorize_path(resource_name, provider) %>
  <% end -%>
<% end -%>
<br><br>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

